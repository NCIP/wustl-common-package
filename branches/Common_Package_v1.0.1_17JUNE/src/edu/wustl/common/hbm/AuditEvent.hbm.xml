<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping default-lazy="false">
    <class
        name="edu.wustl.common.domain.AuditEvent"
        table="AUDIT_EVENT"
        dynamic-update="false"
        dynamic-insert="false"
    >

        <id
            name="id"
            column="IDENTIFIER"
            type="long"
            length="30"
            unsaved-value="null"
        >
            <generator class="native">
                <param name="sequence">AUDIT_EVENT_PARAM_SEQ</param>
            </generator>
        </id>

        <property
            name="timestamp"
            type="timestamp"
            update="true"
            insert="true"
            column="EVENT_TIMESTAMP"
        />
        
         <property
            name="eventType"
            type="string"
            update="true"
            insert="true"
            column="EVENT_TYPE"
            length="200"
        />
        

        <property
            name="userId"
            type="long"
            update="true"
            insert="true"
            column="USER_ID"
        />

        <property
            name="comments"
            type="string"
            update="true"
            insert="true"
            column="COMMENTS"
            length="500"
        />

        <property
            name="ipAddress"
            type="string"
            update="true"
            insert="true"
            column="IP_ADDRESS"
            length="20"
        />

        <set
            name="auditEventLogCollection"
            table="AUDIT_EVENT_LOG"
            lazy="false"
            inverse="false"
            cascade="none"
            sort="unsorted"
        >

              <key
                  column="AUDIT_EVENT_ID"
              />

              <one-to-many
                  class="edu.wustl.common.domain.AbstractAuditEventLog"
              />
        </set>
        
        <joined-subclass
            name="edu.wustl.common.domain.LoginEvent"
        	table="LOGIN_EVENT"
            dynamic-update="false"
            dynamic-insert="false"
        >
	        <key
	            column="IDENTIFIER"
	        />
	
	        <property
            name="sourceId"
            type="long"
            update="true"
            insert="true"
            column="SOURCE_ID"
        />

        <property
            name="userLoginId"
            type="string"
            update="true"
            insert="true"
            column="USER_LOGIN_ID"
            length="20"
        />
        
        <property
            name="isLoginSuccessful"
            type="boolean"
            update="true"
            insert="true"
            column="LOGIN_SUCCESS"
        />

        </joined-subclass>
      

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-AuditEvent.xml
            containing the additional properties and place it in your merge dir.
        -->

    </class>

</hibernate-mapping>
