<?xml version="1.0"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class
        name="edu.wustl.common.domain.User"
        table="CATISSUE_USER"
        dynamic-update="false"
        dynamic-insert="false"
    >

        <id
            name="id"
            column="IDENTIFIER"
            type="long"
            length="30"
            unsaved-value="null"
        >
            <generator class="native">
                <param name="sequence">CATISSUE_USER_SEQ</param>
            </generator>
        </id>

        <property
            name="emailAddress"
            type="string"
            update="true"
            insert="true"
            column="EMAIL_ADDRESS"
            length="100"
        />

        <property
            name="password"
            type="string"
            update="true"
            insert="true"
            column="PASSWORD"
            length="50"
        />

        <property
            name="firstName"
            type="string"
            update="true"
            insert="true"
            column="FIRST_NAME"
            length="50"
        />

        <property
            name="lastName"
            type="string"
            update="true"
            insert="true"
            column="LAST_NAME"
            length="50"
        />

        <property
            name="loginName"
            type="string"
            update="true"
            insert="true"
            column="LOGIN_NAME"
            length="50"
            not-null="true"
            unique="true"
        />

        <property
            name="startDate"
            type="date"
            update="true"
            insert="true"
            column="START_DATE"
        />

        <property
            name="activityStatus"
            type="string"
            update="true"
            insert="true"
            column="ACTIVITY_STATUS"
            length="50"
        />

        <many-to-one
            name="department"
            class="edu.wustl.common.domain.Department"
            cascade="none"
            outer-join="auto"
            update="true"
            insert="true"
            column="DEPARTMENT_ID"
        />

        <many-to-one
            name="cancerResearchGroup"
            class="edu.wustl.common.domain.CancerResearchGroup"
            cascade="none"
            outer-join="auto"
            update="true"
            insert="true"
            column="CANCER_RESEARCH_GROUP_ID"
        />

        <many-to-one
            name="institution"
            class="edu.wustl.common.domain.Institution"
            cascade="none"
            outer-join="auto"
            update="true"
            insert="true"
            column="INSTITUTION_ID"
        />

        <many-to-one
            name="address"
            class="edu.wustl.common.domain.Address"
            cascade="none"
            outer-join="auto"
            update="true"
            insert="true"
            column="ADDRESS_ID"
        />
       

        <property
            name="csmUserId"
            type="long"
            update="true"
            insert="true"
            column="CSM_USER_ID"
            length="20"
        />

        <property
            name="comments"
            type="string"
            update="true"
            insert="true"
            column="STATUS_COMMENT"
            length="2000"
        />

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-User.xml
            containing the additional properties and place it in your merge dir.
        -->

    </class>

</hibernate-mapping>
