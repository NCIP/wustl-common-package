<?xml version="1.0"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 2.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd">

<hibernate-mapping>
    <class
        name="edu.wustl.common.querysuite.queryobject.impl.Query"
        table="QUERY"
        dynamic-update="false"
        dynamic-insert="false"
    >
        <cache usage="read-write" />

        <id
            name="id"
            column="IDENTIFIER"
            type="long"
            length="30"
            unsaved-value="null"
        >
            <generator class="native">
                <param name="sequence">CONSTRAINT_SEQ</param>
            </generator>
        </id>

        <many-to-one
            name="constraints"
            class="edu.wustl.common.querysuite.queryobject.impl.Constraints"
            cascade="all"
            outer-join="auto"
            update="true"
            insert="true"
            column="QUERY_CONSTRAINTS_ID"
            unique="true"
        />

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-Query.xml
            containing the additional properties and place it in your merge dir.
        -->

        <joined-subclass
            name="edu.wustl.common.querysuite.queryobject.impl.ParameterizedQuery"
            table="QUERY_PARAMETERIZED_QUERY"
            dynamic-update="false"
            dynamic-insert="false"
        >
        <key
            column="IDENTIFIER"
        />

        <property
            name="name"
            type="string"
            update="true"
            insert="true"
            column="QUERY_NAME"
            length="255"
            unique="true"
        />

        <property
            name="description"
            type="string"
            update="true"
            insert="true"
            column="DESCRIPTION"
            length="1024"
        />

        </joined-subclass>

    </class>

</hibernate-mapping>
