<?xml version="1.0"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class
        name="edu.wustl.catissuecore.domain.AuditEventQueryLog"
        table="CATISSUE_AUDIT_EVENT_QUERY_LOG"
        dynamic-update="false"
        dynamic-insert="false"
    >

        <id
            name="id"
            column="IDENTIFIER"
            type="long"
            length="30"
            unsaved-value="null"
        >
            <generator class="native">
                <param name="sequence">CATISSUE_AUDIT_EVENT_QUERY_SEQ</param>
            </generator>
        </id>

        <property
            name="queryDetails"
            type="string"
            update="true"
            insert="true"
            column="QUERY_DETAILS"
        />

       <many-to-one
            name="auditEvent"
            class="edu.wustl.catissuecore.domain.AuditEvent"
            cascade="none"
            outer-join="auto"
            update="true"
            insert="true"
            column="AUDIT_EVENT_ID"
        />

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-AuditEvent.xml
            containing the additional properties and place it in your merge dir.
        -->

    </class>

</hibernate-mapping>
