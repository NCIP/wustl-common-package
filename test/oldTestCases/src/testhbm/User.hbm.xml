<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
    
<hibernate-mapping>
    <class
        name="edu.wustl.common.testdomain.User"
        table="test_user"
        lazy="true"
    >
     <cache usage="read-write" />
    
   <id
            name="identifier"
            column="IDENTIFIER"
            type="long"
            length="30"
            unsaved-value="null"
        >
            <generator class="native">
               <!-- <param name="sequence">USER_SEQ</param>  -->
              <!--  
                  To add non XDoclet generator parameters, create a file named 
                  hibernate-generator-params-User.xml 
                  containing the additional parameters and place it in your merge dir. 
              --> 
            </generator>
    </id>

    <property
            name="emailAddress"
            type="string"
            update="true"
            insert="true"
            column="EMAIL_ADDRESS"
            length="255"
     />

     <property
            name="firstName"
            type="string"
            update="true"
            insert="true"
            column="FIRST_NAME"
            length="255"
      />

     <property
            name="lastName"
            type="string"
            update="true"
            insert="true"
            column="LAST_NAME"
            length="255"
      />
      
       <property
            name="activityStatus"
            type="string"
            update="true"
            insert="true"
            column="ACTIVITY_STATUS"
            length="255"
      />
     
      <set
            name="roleCollection"
            table="test_role"
           	lazy="false" 
            inverse="true"
            cascade="save-update,all-delete-orphan"
            sort="unsorted"
        >
        
        <cache usage="read-write" />

              <key
                  column="USER_ID"
              />

              <one-to-many
                  class="edu.wustl.common.testdomain.UserRole"
              />
        </set>
        
    </class>

</hibernate-mapping>
